{
  "name": "apply-mate-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for the ApplyMate platform (Next.js web + Nest.js services)",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web",
    "dev:graphql-ms": "turbo run dev --filter=graphql-ms",
    "dev:auth-ms": "turbo run dev --filter=auth-ms",
    "dev:upload-ms": "turbo run dev --filter=upload-ms",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write"
    ]
  }
}
