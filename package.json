{
  "name": "apply-mate-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for the ApplyMate platform (Next.js web + Nest.js services)",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:mesh": "pnpm --filter mesh-gateway dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:user-graphql-ms": "turbo run dev --filter=user-graphql-ms",
    "dev:plan-graphql-ms": "turbo run dev --filter=plan-graphql-ms",
    "dev:auth-ms": "turbo run dev --filter=auth-ms",
    "dev:upload-ms": "turbo run dev --filter=upload-ms",
    "open:mesh": "open http://localhost:4103/graphql",
    "mesh:build": "pnpm --filter mesh-gateway build",
    "graphql:codegen:web": "pnpm --filter web codegen:graphql",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "connect:codegen": "pnpm --filter @apply-mate/shared proto:generate",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript-eslint": "^8.47.0"
  }
}
