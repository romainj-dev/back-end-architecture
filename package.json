{
  "name": "apply-mate-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for the ApplyMate platform (Next.js web + Nest.js services)",
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "pnpm": {
    "overrides": {
      "@nestjs/core": "10.4.20",
      "@nestjs/common": "10.4.20"
    }
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:mesh": "pnpm --filter mesh-gateway dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:user-graphql-ms": "turbo run dev --filter=user-graphql-ms",
    "dev:plan-graphql-ms": "turbo run dev --filter=plan-graphql-ms",
    "dev:auth-ms": "turbo run dev --filter=auth-ms",
    "dev:upload-ms": "turbo run dev --filter=upload-ms",
    "open:mesh": "open http://localhost:4103/graphql",
    "mesh:build": "pnpm --filter mesh-gateway build",
    "graphql:codegen:web": "pnpm --filter web codegen:graphql",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "connect:codegen": "pnpm --filter @apply-mate/shared proto:generate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cache:clear:next": "rm -rf apps/web/.next",
    "cache:clear:mesh": "rm -rf apps/mesh-gateway/.mesh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.39.1",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.10.18",
    "@swc/helpers": "^0.5.17",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "tsx": "^4.19.1",
    "turbo": "^2.1.3",
    "typescript-eslint": "^8.47.0"
  }
}
