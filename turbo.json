{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "connect:codegen": {
      "cache": false,
      "outputs": ["packages/shared/connect/gen/**"]
    },
    "dev": {
      "dependsOn": ["connect:codegen"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "connect:codegen"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["connect:codegen"],
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.cjs"
      ],
      "env": ["TURBO_HASH"]
    },
    "test": {
      "dependsOn": ["^build", "connect:codegen"],
      "outputs": ["coverage/**"]
    }
  }
}
