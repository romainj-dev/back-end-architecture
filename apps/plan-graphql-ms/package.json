{
  "name": "plan-graphql-ms",
  "version": "0.1.0",
  "private": true,
  "description": "Plan GraphQL microservice for ApplyMate",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/main.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "start": "node -r tsconfig-paths/register dist/main.js",
    "start:debug": "node --inspect=0.0.0.0:9229 -r tsconfig-paths/register dist/main.js",
    "sync-schema": "node ./scripts/sync-schema.mjs",
    "test": "jest --runInBand",
    "type-check": "tsc --noEmit",
    "postbuild": "pnpm run sync-schema"
  },
  "dependencies": {
    "@apollo/server": "^4.11.1",
    "@nestjs/apollo": "^12.0.6",
    "@nestjs/common": "^10.4.7",
    "@nestjs/core": "^10.4.7",
    "@nestjs/graphql": "^12.0.6",
    "@nestjs/platform-express": "^10.4.7",
    "@supabase/supabase-js": "^2.84.0",
    "graphql": "^16.9.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.7",
    "@nestjs/testing": "^10.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
